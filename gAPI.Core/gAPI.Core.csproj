<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net10.0</TargetFramework>
		<Nullable>enable</Nullable>
		<ImplicitUsings>enable</ImplicitUsings>
		<InvariantGlobalization>true</InvariantGlobalization>

		<Version>0.0.2</Version>
		<Authors>Willem-Jan Beltman</Authors>
		<Company>Willem-Jan Beltman</Company>
		<PackageId>gAPI.Core</PackageId>
		<Description>gAPI - a fast, smart, auto-generated API and RPC system for .NET 10. This is the core library of the gAPI ecosystem.</Description>
		<PackageTags>api;rpc;codegen;dotnet;blazor;aspnetcore;tooling</PackageTags>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<PackageProjectUrl>https://github.com/willembeltman/gAPI.Core</PackageProjectUrl>
		<RepositoryUrl>https://github.com/willembeltman/gAPI.Core</RepositoryUrl>
		<RepositoryType>git</RepositoryType>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<IncludeSymbols>false</IncludeSymbols>
		<IncludeSource>false</IncludeSource>
		<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
		<Title>gAPI commen library</Title>
		<Copyright>2026 MIT Willem-Jan Beltman, see license file</Copyright>
	</PropertyGroup>

	<ItemGroup>
	  <Compile Remove="CodeGen\**" />
	  <EmbeddedResource Remove="CodeGen\**" />
	  <None Remove="CodeGen\**" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Azure.Storage.Blobs" Version="12.27.0" />
		<PackageReference Include="Microsoft.AspNetCore.Http" Version="2.3.9" />
		<PackageReference Include="Microsoft.Bcl.AsyncInterfaces" Version="10.0.2" />
		<PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="5.0.0" />
		<PackageReference Include="Microsoft.Extensions.Configuration.Abstractions" Version="10.0.2" />
		<PackageReference Include="SpanJson" Version="4.2.1" />
		<PackageReference Include="System.ComponentModel.Annotations" Version="5.0.0" />
	</ItemGroup>

	<ItemGroup>
		<None Include="README.md" Pack="true" PackagePath="" />
	</ItemGroup>

	<ItemGroup>
	  <None Update="Test.tt">
	    <Generator>TextTemplatingFileGenerator</Generator>
	    <LastGenOutput>Test.txt</LastGenOutput>
	  </None>
	  <None Update="Test.txt">
	    <DesignTime>True</DesignTime>
	    <AutoGen>True</AutoGen>
	    <DependentUpon>Test.tt</DependentUpon>
	  </None>
	</ItemGroup>

	<ItemGroup>
	  <Service Include="{508349b6-6b84-4df5-91f0-309beebad82d}" />
	</ItemGroup>

</Project>
